@model PTurismo.Models.GaleriaElemento

@{
    ViewBag.Title = "Eliminar";
}
<div class="row row-edit">
    <div class="row">
        <h2>Eliminar</h2>
    </div>
    <div class="row">
        <h3>Tem a certeza que pretende eliminar?</h3>
    </div>
    <div class="row">
        <div>
            <h4>Galeria do Elemento</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Elemento:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Elemento.nome)
                    <hr />
                </dd>
                <dt>
                    Legenda:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.legenda)
                    <hr />
                </dd>
                <dt>
                    Preview:
                </dt>
                <dd>
                    <img src="~/Content/Images/GaleriaElemento/@Model.FilePathElementos.First().FileName" width="150" height="150" alt="Ficheiro Media" />
                </dd>

            </dl>
           
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    @Html.ActionLink("Voltar à Lista", "Index")
                </div>
            }
        </div>

    </div>
</div>



