@using Jmelosegui.Mvc.GoogleMap
@model IEnumerable<PTurismo.Models.Poi>
@{
    ViewBag.Title = "Home Page";
}



<div class="row">
    <div class="col-md-12">
        @(Html.GoogleMap()
              .Name("map")
              .Height(800)
              .ApiKey("AIzaSyAYC419uGMGyG-Lhc5gPRxzRm1q2Uu1b-4")
              .Center(c =>c.Latitude(41.589282).Longitude(-6.924816))
              .FitToMarkersBounds((bool)ViewData["FitToMarkersBounds"])
              .Markers(m =>
              {
                  
                  foreach (var p in Model)
                  {
                      m.Add().Latitude(p.latitude).Longitude(p.longitude);
                   
                  }
              })
        )
    </div>
</div>

@section scripts
{
    @(Html.GoogleMap().ScriptRegistrar())
}