@model IEnumerable<PTurismo.Models.Poi>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Categoria
        </th>
        <th>
            Nome
        </th>
        <th>
            Latitude
        </th>
        <th>
            Longitude
        </th>
        <th>
            Descrição
        </th>
        <th>
            Imagem
        </th>
        <th>
            Resumo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categoria.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.latitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.longitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.imagem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.resumo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PoiID }) <br />
            @Html.ActionLink("Detalhes", "Details", new { id=item.PoiID }) <br />
            @Html.ActionLink("Eliminar", "Delete", new { id=item.PoiID })
        </td>
    </tr>
}

</table>
