@model IEnumerable<PTurismo.Models.GaleriaPoi>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Poi
        </th>
        <th>
            Media
        </th>
        <th>
            Legenda
        </th>
        <th>
            Tipo media
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Poi.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.media)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.legenda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoMedia)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.GaleriaPoiID }) <br />
            @Html.ActionLink("Detalhes", "Details", new { id=item.GaleriaPoiID }) <br />
            @Html.ActionLink("Apagar", "Delete", new { id=item.GaleriaPoiID })
        </td>
    </tr>
}

</table>
