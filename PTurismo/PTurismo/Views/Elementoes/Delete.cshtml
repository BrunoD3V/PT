@model PTurismo.Models.Elemento

@{
    ViewBag.Title = "Eliminar";
}
<div class="row row-edit">
    <div class="row">
        <h2>Eliminar</h2>
    </div>
    <div class="row">
        <h3>Tem a certeza que pretende eliminar?</h3>
    </div>
    <div class="row">
        <div>
            <h4>Elemento</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Poi:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.poi.nome)
                </dd>

                <dt>
                    Nome:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nome)
                </dd>

                <dt>
                    Descrição:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.descricao)
                </dd>

                <dt>
                    Imagem:
                </dt>

                <dd>
                    <img src="~/Content/Images/GaleriaElemento/Imagem/@Model.ImagemElemento" width="150" height="150" alt="Ficheiro Media" />
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    @Html.ActionLink("Voltar à lista", "Index")
                </div>
            }
        </div>
    </div>
</div>




