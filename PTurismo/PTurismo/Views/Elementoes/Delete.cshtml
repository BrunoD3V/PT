@model PTurismo.Models.Elemento

@{
    ViewBag.Title = "Apagar";
}

<h2>Apagar</h2>

<h3>Têm a certeza que pretende eliminar?</h3>
<div>
    <h4>Elemento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Poi:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.poi.nome)
        </dd>

        <dt>
            Nome:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            Descrição:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descricao)
        </dd>

        <dt>
            Imagem:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.imagem)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar à lista", "Index")
        </div>
    }
</div>
